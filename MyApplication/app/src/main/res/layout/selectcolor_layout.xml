<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_pick"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <LinearLayout
        android:layout_weight="2"
        android:background="@color/background0"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <RadioGroup
            android:id="@+id/rg_choice"
            android:layout_margin="@dimen/margin_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/radio_single"
                android:text="单选"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/radio_compound"
                android:text="合成"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>

        <com.season.bungejoin.bungejoin.widget.CircleImageView
            android:id="@+id/cir_pick1"
            android:layout_margin="@dimen/margin_normal"
            android:layout_height="@dimen/icon_size_normal"
            android:layout_width="@dimen/icon_size_normal"
            />

        <com.season.bungejoin.bungejoin.widget.CircleImageView
            android:id="@+id/cir_pick2"
            android:layout_margin="@dimen/margin_normal"
            android:layout_height="@dimen/icon_size_normal"
            android:layout_width="@dimen/icon_size_normal"
            />

        <com.season.bungejoin.bungejoin.widget.CircleImageView
            android:id="@+id/cir_result"
            android:layout_margin="@dimen/margin_normal"
            android:layout_height="@dimen/icon_size_normal"
            android:layout_width="@dimen/icon_size_normal"
            />

    </LinearLayout>

</LinearLayout>