<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@color/background0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/filler"
        android:background="@color/background0"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_avatar"
        android:layout_below="@+id/filler"
        android:background="@color/background0"
        android:layout_marginTop="@dimen/margin_big"
        android:layout_height="@dimen/userinfo_avatarsize"
        android:layout_width="match_parent"
        />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_below="@id/rec_avatar"
        style="@style/textview_userinfo_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_sex"
        android:layout_below="@id/tv_nickname"
        style="@style/textview_userinfo_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_below="@+id/tv_sex"
        style="@style/textview_userinfo_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_below="@+id/tv_email"
        style="@style/textview_userinfo_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_motto"
        android:layout_below="@id/tv_phone"
        style="@style/textview_userinfo_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/btn_controller"
        android:layout_alignParentBottom="true"
        android:background="@drawable/controller"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:layout_marginBottom="@dimen/margin_normal"
        android:layout_width="@dimen/controller_size"
        android:layout_height="@dimen/controller_size" />
</RelativeLayout>