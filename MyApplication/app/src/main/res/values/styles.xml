<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="text_white_bigsize_shadow_bold" >
        <item name="android:textSize">20sp</item>
        <item name="android:shadowColor">#DDF0ED</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    
    <style name="text_leftsideleader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#a0522d</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textdialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="inputdialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="commondialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="textview_userinfo_setting">
        <item name="android:drawableLeft">@drawable/modify</item>
        <item name="android:paddingLeft">@dimen/padding_normal</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/textview_minheight</item>
        <item name="android:layout_marginTop">@dimen/margin_big</item>
    </style>
</resources>
